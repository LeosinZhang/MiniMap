<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    >

    <!-- 下方导航条 -->
    <RadioGroup
        android:id="@+id/WriteDown_radioGroup"
        android:layout_height="55dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:layout_gravity="center|center_horizontal|center_vertical"
        >

        <Button
            android:id="@+id/WriteDownButton_back"
            android:onClick="doClick"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_weight="1.2"
            android:text="返回"
            android:textSize="17dp"
            android:textColor="#000000"
            android:gravity="center"
            />

        <TextView
            android:layout_height="5dp"
            android:layout_width="match_parent"
            android:layout_weight="1.3"
            android:background="@null"
            />

        <Button
            android:id="@+id/WriteDownButton_expend"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:onClick="doClick"
            android:text="支出"
            android:textSize="17dp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/round_circle_blue_left"
            />

        <Button
            android:id="@+id/WriteDownButton_income"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="收入"
            android:textColor="#4682B4"
            android:textSize="17dp"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:onClick="doClick"
            android:background="@drawable/round_circle_right"
            />

        <TextView
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_weight="1.3"
            android:background="@null"
            />

        <TextView
            android:id="@+id/WriteDownButton_sure"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:button="@null"
            android:layout_weight="1.2"
            android:onClick="doClick"

            />
    </RadioGroup>

    <!--     ********分割线颜色*******   -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#ffb2b2b2">
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/WriteDown_viewpager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1.0"
        />

</LinearLayout>