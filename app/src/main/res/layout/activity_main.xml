<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:arc="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >

    <com.baidu.mapapi.map.MapView
        android:id="@+id/bmapView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:clickable="true"
        />

    <AutoCompleteTextView
        android:id="@+id/ActivityMain_SearchKey"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:textStyle="italic"
        android:textSize="15dp"
        android:hint="查找地点 公交 地铁"
        android:drawableLeft="@mipmap/search"
        android:paddingLeft="10dp"
        android:drawablePadding="10dp"
        android:background="@drawable/bg_edit_selector"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:textColor="#000000"
        />

    <Button
        android:id="@+id/ActivityMain_SearchButton"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:text="搜索"
        android:textColor="#ffffff"
        android:textSize="15dp"
        android:onClick="OnClick"
        android:layout_alignRight="@+id/ActivityMain_SearchKey"
        android:layout_alignTop="@+id/ActivityMain_SearchKey"
        android:background="@drawable/bg_right_selector"
        />

    <ImageButton
        android:id="@+id/ActivityMain_MapMode"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:onClick="OnClick"
        android:layout_below="@+id/ActivityMain_SearchButton"
        android:background="@mipmap/satellite_map"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        />

    <ImageButton
        android:id="@+id/ActivityMain_RoadLight"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:onClick="OnClick"
        android:layout_below="@+id/ActivityMain_MapMode"
        android:background="@mipmap/road_off"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        />

    <ImageButton
        android:id="@+id/ActivityMain_Clear"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:onClick="OnClick"
        android:layout_below="@+id/ActivityMain_RoadLight"
        android:background="@mipmap/clear"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        />



    <!-- 该状态栏为功能按钮，默认显示。当长按地图上某点时，该区域隐藏，显示该店的位置 -->
