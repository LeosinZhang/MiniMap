    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/SwitchButton"
        android:visibility="visible"
        android:background="#ffffff"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:onClick="OnClick"
            android:id="@+id/ActivityMain_offline"
            >
            <Button
                android:layout_width="20dp"
                android:layout_height="17dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/download"
                android:layout_gravity="center_vertical"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="离线"
                android:textColor="#000000"
                android:textSize="17dp"
                android:gravity="center_vertical"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:onClick="OnClick"
            android:background="#000000"
            >
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/a2"
            android:onClick="OnClick"
            >
            <Button
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/footprints"
                android:layout_gravity="center_vertical"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="足迹"
                android:textColor="#000000"
                android:textSize="17dp"
                android:gravity="center_vertical"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:onClick="OnClick"
            android:background="#000000"
            >
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/a3"
            android:onClick="OnClick"
            >
            <Button
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/members"
                android:gravity="center_vertical"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="成员"
                android:textColor="#000000"
                android:textSize="17dp"
                android:gravity="center_vertical"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:onClick="OnClick"
            android:background="#000000"
            >
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/a4"
            android:onClick="OnClick"
            >
            <Button
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/ranging"
                android:gravity="center_vertical"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="出发"
                android:textColor="#000000"
                android:textSize="17dp"
                android:gravity="center_vertical"
                />
        </LinearLayout>

    </LinearLayout>


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/ShowPlace"
        android:visibility="gone"
        android:background="#ffffff"
        >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="43dp"
            android:id="@+id/ShowText"
            >
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="20dp"
                android:id="@+id/AddressText"
                android:singleLine="false"
                android:textSize="15dp"
                android:gravity="center_vertical"
                android:textColor="#000000"
                />
            </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#DCDCDC"
            android:id="@+id/cutLine"
            android:layout_below="@+id/ShowText"
            >
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#DCDCDC"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:id="@+id/ShowButton"
            android:layout_below="@+id/cutLine"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/go_to_place"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true"
                android:text="去这里"
                android:onClick="OnClick"
                android:gravity="center"
                android:textSize="17dp"
                android:background="#ffffff"
                android:textColor="#000000"
                />

            <Button
                android:layout_width="1dp"
                android:layout_height="25dp"
                android:layout_centerInParent="true"
                android:gravity="center_vertical"
                android:background="#000000"
                />

            <Button
                android:id="@+id/navigation"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:text="导航"
                android:onClick="OnClick"
                android:gravity="center"
                android:textSize="17dp"
                android:background="#ffffff"
                android:textColor="#000000"
                />
        </LinearLayout>
    </RelativeLayout>


    <ImageButton
        android:id="@+id/ActivityMain_locate"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_above="@+id/SwitchButton"
        android:layout_marginBottom="10dp"
        android:onClick="OnClick"
        android:background="@mipmap/locate"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        />

    <zhangxin.minimap.ZomView.ZoomControlsView
        android:id="@+id/ZoomControlView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ActivityMain_locate"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        >
    </zhangxin.minimap.ZomView.ZoomControlsView>

</RelativeLayout>